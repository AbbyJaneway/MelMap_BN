<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="400sp" android:background="@drawable/pinkborderbg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Save to your Favorites"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="26sp"
        android:typeface="sans"
        android:layout_marginTop="10sp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:id="@+id/rgPlaces">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rbStartPoint"
            android:text="My start point"
            android:textColor="#000000"
            android:textSize="20sp"
            android:button="@drawable/radiobutton"/>
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rbCurrentLoc"
            android:text="My current location"
            android:textColor="#000000"
            android:textSize="20sp"
            android:button="@drawable/radiobutton"/>
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rbDestination"
            android:text="My destination"
            android:textColor="#000000"
            android:textSize="20sp"
            android:button="@drawable/radiobutton"/>
        </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Enter a name for this place"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/etPlaceToSave"
        android:background="@drawable/edittext"
        android:textSize="22sp"
        android:layout_margin="8sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15sp"
        android:id="@+id/pbSavePlace"
        android:textColor="@android:color/holo_blue_light"
        android:text="Save"
        android:layout_marginRight="8sp"/>
</LinearLayout>
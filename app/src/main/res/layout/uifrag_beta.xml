<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:layout_width="fill_parent"
        android:layout_height="120sp"
        android:background="@drawable/pinkborderbg"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:id="@+id/tvDestination"
        android:textSize="16sp"
        android:layout_marginLeft="3sp"
        android:text="destination"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDestination"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/llTimePicker">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When?"
            android:layout_margin="5sp"
            android:textSize="18sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbTime"
            android:text="__:__"
            android:textColor="@android:color/holo_blue_light"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTimePicker"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:id="@+id/tvTravelLabel"
            android:textSize="18sp"
            android:text="Travel by: "/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:id="@+id/ibCar"
            android:src="@drawable/car_button" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:id="@+id/ibWalk"
            android:src="@drawable/foot_icon"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:id="@+id/ibBus"
            android:src="@drawable/bus_button"/>
    </LinearLayout>
</RelativeLayout>